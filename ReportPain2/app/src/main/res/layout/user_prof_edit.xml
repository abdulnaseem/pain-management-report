<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5">


        <TextView
            android:id="@+id/appname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Edit Account."
            android:textColor="#1B3B6F"
            android:textSize="40sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="90dp"
            android:layout_below="@id/appname"
            android:background="@drawable/signup_rl"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="2dp">

            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginRight="90dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/signup_edittext"
                android:inputType="textVisiblePassword"
                android:textCursorDrawable="@drawable/cursor_style"
                android:hint="Full Name"
                android:textColorHint="#969FAA"
                android:textColor="#5A6978"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="90dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_below="@id/fullname"
                android:background="@drawable/signup_edittext"
                android:inputType="date"
                android:textCursorDrawable="@drawable/cursor_style"
                android:hint="Date of Birth"
                android:textColorHint="#969FAA"
                android:textColor="#5A6978"
                android:textSize="16dp"
                android:editable="false"
                android:focusableInTouchMode="false"/>
            <EditText
                android:id="@+id/weight"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="44dp"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_below="@id/dob"
                android:background="@drawable/signup_edittext"
                android:inputType="numberDecimal"
                android:textCursorDrawable="@drawable/cursor_style"
                android:hint="Weight"
                android:textColorHint="#969FAA"
                android:textColor="#5A6978"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/weight"
                android:layout_below="@id/dob"
                android:fontFamily="sans-serif-condensed-light"
                android:text="kg"
                android:textColor="#1B3B6F"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/height"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_below="@id/dob"
                android:layout_toRightOf="@id/kg"
                android:background="@drawable/signup_edittext"
                android:inputType="numberDecimal"
                android:textCursorDrawable="@drawable/cursor_style"
                android:hint="Height"
                android:textColorHint="#969FAA"
                android:textColor="#5A6978"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/height"
                android:layout_below="@id/dob"
                android:fontFamily="sans-serif-condensed-light"
                android:text="m"
                android:textColor="#1B3B6F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/genB"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/weight"
                android:layout_marginTop="13.5dp"
                android:layout_marginLeft="44dp"
                android:backgroundTint="#1B3B6F"
                android:text="Generate BMI"
                android:textColor="#FFFFFF"
                android:textSize="11sp"/>

            <EditText
                android:id="@+id/bmi"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_below="@id/height"
                android:layout_toRightOf="@id/kg"
                android:background="@drawable/signup_edittext"
                android:textCursorDrawable="@drawable/cursor_style"
                android:hint="BMI"
                android:textColorHint="#969FAA"
                android:textColor="#5A6978"
                android:textSize="16dp"
                android:editable="false"/>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@id/bmi"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="#1B3B6F"/>

            <EditText
                android:id="@+id/username2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="90dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_below="@id/line"
                android:background="@drawable/signup_edittext"
                android:inputType="textVisiblePassword"
                android:textCursorDrawable="@drawable/cursor_style"
                android:hint="Username"
                android:textColorHint="#969FAA"
                android:textColor="#5A6978"
                android:textSize="16dp"
                android:editable="false"
                android:focusableInTouchMode="false"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username2"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#1B3B6F"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"/>

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>