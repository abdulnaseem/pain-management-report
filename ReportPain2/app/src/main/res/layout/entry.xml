<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/appname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Entry."
            android:textColor="#1B3B6F"
            android:textSize="40sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/q1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/appname"
            android:background="@drawable/signup_rl"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="2dp">

            <TextView
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="90dp"
                android:layout_centerHorizontal="true"
                android:textCursorDrawable="@drawable/cursor_style"
                android:text="Where is your pain located?"
                android:textColorHint="#969FAA"
                android:textColor="@color/dark_blue"
                android:textSize="16sp"/>

            <Spinner
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/signup_edittext"
                android:textCursorDrawable="@drawable/cursor_style"
                android:textColorHint="#969FAA"
                android:textColor="#5A6978"
                android:textSize="16sp"
                android:spinnerMode="dropdown"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/q2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/q1"
            android:background="@drawable/signup_rl"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="2dp">

            <TextView
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="90dp"
                android:layout_centerHorizontal="true"
                android:textCursorDrawable="@drawable/cursor_style"
                android:text="How does your pain feel?"
                android:textColorHint="#969FAA"
                android:textColor="@color/dark_blue"
                android:textSize="16sp"/>

            <Spinner
                android:id="@+id/feeling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question2"
                android:layout_marginTop="20dp"
                android:layout_marginRight="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/signup_edittext"
                android:textCursorDrawable="@drawable/cursor_style"
                android:textColorHint="#969FAA"
                android:textColor="#5A6978"
                android:textSize="16sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/q3"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/q2"
            android:background="@drawable/signup_rl"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="2dp">

            <TextView
                android:id="@+id/question3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="90dp"
                android:layout_centerHorizontal="true"
                android:textCursorDrawable="@drawable/cursor_style"
                android:textColorHint="#969FAA"
                android:textColor="@color/dark_blue"
                android:textSize="16sp"/>

            <Spinner
                android:id="@+id/level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question3"
                android:layout_marginTop="20dp"
                android:layout_marginRight="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/signup_edittext"
                android:textCursorDrawable="@drawable/cursor_style"
                android:textColorHint="#969FAA"
                android:textColor="#5A6978"
                android:textSize="16sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/q4"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/q3"
            android:background="@drawable/signup_rl"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="2dp">

            <TextView
                android:id="@+id/question4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="90dp"
                android:layout_centerHorizontal="true"
                android:textCursorDrawable="@drawable/cursor_style"
                android:text="Comment."
                android:textColorHint="#969FAA"
                android:textColor="@color/dark_blue"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question4"
                android:layout_marginTop="20dp"
                android:layout_marginRight="90dp"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:background="@drawable/signup_edittext"
                android:textCursorDrawable="@drawable/cursor_style"
                android:textColorHint="#969FAA"
                android:textColor="#5A6978"
                android:textSize="16sp"
                android:lines="4"
                android:maxLines="5"/>
        </RelativeLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/q4"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="Submit"
            android:textSize="16sp"
            android:textAllCaps="false"/>
    </RelativeLayout>
</ScrollView>